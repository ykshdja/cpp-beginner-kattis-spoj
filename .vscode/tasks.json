{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with GCC 15",
            "type": "shell",
            "command": "g++-15",
            "args": [
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-O2",
                "${file}",
                "-o",
                "${fileDirName}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Using g++-15 with C++20"
        },
        {
            "label": "Run Executable",
            "type": "shell",
            "command": "./${fileDirName}/${fileBasenameNoExtension}",
            "dependsOn": [
                "Build with GCC 15"
            ],
            "group": {
                "kind": "none",
                "isDefault": true
            }
        }
    ]
}